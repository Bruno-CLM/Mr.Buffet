<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CadastroActivity">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="573dp"
        android:orientation="vertical"
        android:padding="3dp">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@drawable/box">


    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="583dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15dp"
        android:padding="30dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/localizacaoBuffet"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Iniciar cadastro"
                android:textAllCaps="false"
                android:textColor="#3f549c"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nome_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_email_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_senha_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="senha"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_conf_senha_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="confrimar senha"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/ckb_mostrar_senha_cadastro"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_marginTop="20dp"
                android:text="visualizar senha"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_registrar_cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_button"
                android:text="CADASTRAR-SE"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/cadastroProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="invisible"
                android:indeterminate="true"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/btn_login_registro"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="30dp"
                android:text=" Já tem uma conta? faça login "
                android:textColor="#3f549c"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
